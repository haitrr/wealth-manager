// schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
    directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Transaction {
    id         String   @id @default(cuid())
    date       DateTime
    value      Decimal
    category   Category @relation(fields: [categoryId], references: [id])
    categoryId String
    account    Account  @relation(fields: [accountId], references: [id])
    accountId  String

    @@index([date], type: BTree)
    @@index([categoryId], type: Hash)
}

model Category {
    id           String        @id @default(cuid())
    name         String
    transactions Transaction[]
    type         CategoryType
    parentId     String?
    children     Category[]    @relation("ParentCategory")
    parent       Category?     @relation("ParentCategory", fields: [parentId], references: [id])
    icon         String        @default("money")

    budgets Budget[]
}

model Budget {
    id         String       @id @default(cuid())
    name       String
    categories Category[]
    value      Decimal
    startDate  DateTime
    period     BudgetPeriod
    repeat     Boolean
}

model Debt {
    id              String        @id @default(cuid())
    name            String
    direction       DebtDirection
    principalAmount Float
    interestRate    Float // as decimal (e.g., 0.05 for 5%)
    startDate       DateTime
    dueDate         DateTime
    accountId       String        @unique
    account         Account       @relation(fields: [accountId], references: [id])
}

enum DebtDirection {
    TAKEN
    GIVEN
}

model Account {
    id           String        @id @default(cuid())
    name         String
    transactions Transaction[]
    type         AccountType
    debt         Debt?
    debtId       String?
}

enum AccountType {
    CASH
    BORROWING
    LOAN
}

enum BudgetPeriod {
    DAILY
    WEEKLY
    MONTHLY
    QUARTERLY
    YEARLY
}

enum CategoryType {
    INCOME
    EXPENSE
    BORROWING
    BORROWING_PAYMENT
    BORROWING_INTEREST_PAYMENT
    BORROWING_FEE_PAYMENT
    LOAN
    LOAN_COLLECTION
    LOAN_INTEREST_COLLECTION
    LOAN_FEE_COLLECTION
}
