// schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
    directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Transaction {
    id         String   @id @default(cuid())
    date       DateTime
    value      Decimal
    category   Category @relation(fields: [categoryId], references: [id])
    categoryId String
    debtId     String?
    debt       Debt?    @relation("DebtTransactions", fields: [debtId], references: [id])

    @@index([date], type: BTree)
    @@index([categoryId], type: Hash)
}

model Category {
    id           String        @id @default(cuid())
    name         String
    transactions Transaction[]
    type         CategoryType
    parentId     String?
    children     Category[]    @relation("ParentCategory")
    parent       Category?     @relation("ParentCategory", fields: [parentId], references: [id])
    icon         String?
    budgets      Budget[]
}

model Budget {
    id         String       @id @default(cuid())
    name       String
    categories Category[]
    value      Decimal
    startDate  DateTime
    period     BudgetPeriod
    repeat     Boolean
}

model Debt {
    id           String        @id @default(cuid())
    name         String
    amount       String
    paidAmount   String
    startDate    DateTime?
    transactions Transaction[] @relation("DebtTransactions")
}

enum BudgetPeriod {
    DAILY
    WEEKLY
    MONTHLY
    QUARTERLY
    YEARLY
}

enum CategoryType {
    INCOME
    EXPENSE
    DEBT
    LOAN
    DEBT_COLLECTION
    LOAN_PAYMENT
}
