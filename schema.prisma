// schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
    directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Transaction {
    id         String   @id @default(cuid())
    date       DateTime
    value      Decimal
    category   Category @relation(fields: [categoryId], references: [id])
    categoryId String
    borrowingId     String?
    borrowing       Borrowing?    @relation("BorrowingTransactions", fields: [borrowingId], references: [id])
    loanId     String?
    loan       Loan?    @relation("LoanTransactions", fields: [loanId], references: [id])
    @@index([date], type: BTree)
    @@index([categoryId], type: Hash)
    @@index([borrowingId], type: Hash)
    @@index([loanId], type: Hash)
}

model Category {
    id           String        @id @default(cuid())
    name         String
    transactions Transaction[]
    type         CategoryType
    parentId     String?
    children     Category[]    @relation("ParentCategory")
    parent       Category?     @relation("ParentCategory", fields: [parentId], references: [id])
    icon       String   @default("money")

    budgets      Budget[]
}

model Budget {
    id         String       @id @default(cuid())
    name       String
    categories Category[]
    value      Decimal
    startDate  DateTime
    period     BudgetPeriod
    repeat     Boolean
}

model Borrowing {
    id           String        @id @default(cuid())
    name         String
    amount       Decimal
    paidAmount   Decimal
    startDate    DateTime?
    transactions Transaction[] @relation("BorrowingTransactions")

    @@index([startDate], type: BTree)
}

model Loan {
    id           String        @id @default(cuid())
    name         String
    amount       Decimal
    paidAmount   Decimal
    startDate    DateTime?
    transactions Transaction[] @relation("LoanTransactions")

    @@index([startDate], type: BTree)
}

enum BudgetPeriod {
    DAILY
    WEEKLY
    MONTHLY
    QUARTERLY
    YEARLY
}

enum CategoryType {
    INCOME
    EXPENSE
    BORROWING
    BORROWING_PAYMENT
    BORROWING_INTEREST_PAYMENT
    BORROWING_FEE_PAYMENT
    LOAN
    LOAN_COLLECTION
    LOAN_INTEREST_COLLECTION
    LOAN_FEE_COLLECTION
}
